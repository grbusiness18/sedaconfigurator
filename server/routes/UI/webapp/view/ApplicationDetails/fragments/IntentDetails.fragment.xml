<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:m="sap.m">
  <m:Page id="intentDetails" title="{i18n>INTENT_DETAILS}" floatingFooter="true" enableScrolling="false">
    <m:content>
      <core:Fragment fragmentName="sedaconf.view.ApplicationDetails.fragments.IntentDetailsObjectPageLayout"
        type="XML"/>
    </m:content>
    <m:footer>
      <m:Bar>
        <m:contentLeft>
          <m:Button icon="sap-icon://delete" tooltip="{i18n>DELETE_INTENT}" press="onDeleteIntent"
            visible="{view>/showDetails}"></m:Button>
        </m:contentLeft>
        <m:contentRight>
          <m:Button text="{i18n>LOGS}" press="onViewLogs"></m:Button>
        </m:contentRight>
      </m:Bar>
    </m:footer>
  </m:Page>
</core:FragmentDefinition>
